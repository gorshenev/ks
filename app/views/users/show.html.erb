
<h1><%= @user.name %>
<small><%= @user.email %></small></h1>

<% if current_user?(@user) %>
<div class="text-center">
<%= link_to "Создать мероприятие", new_event_path, class: "btn btn-success" %>
  <%= link_to "Изменить профиль", edit_user_path, class: "btn btn-success" %>
</div>

<% end %>
<br>

<div class="row">
  <div class="col-md-8"><h1> Мои заявки </h1>

    <% if @upcoming_events.any? %>
        <h2>Будущие мероприятия</h2>
        <%= render 'shared/table', object: @upcoming_events %>
    <% end %>

    <% if @previous_events.any? %>

        <h2>Посещенные</h2>
        <%= render 'shared/table', object: @previous_events %>

    <% end %>



  </div>
  <div class="col-md-4"> <h1>Личные данные</h1>

    <%= form_for(@user) do |f| %>


        <%= f.label :Имя %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>


        <%= f.label :Направление %>
        <%= f.text_field :napravlenie, class: 'form-control' %>

        <%= f.label :Дата_рождения %>
        <%= f.date_field :birthdate, class: 'form-control' %>

        <%= f.label :Телефон %>
        <%= f.phone_field :phone, class: 'form-control' %>

        <%= f.label :Компания %>
        <%= f.text_field :company, class: 'form-control' %>

        <%= f.label :Должность %>
        <%= f.text_field :post, class: 'form-control' %>

        <%= f.label :Город %>
        <%= f.text_field :city, class: 'form-control' %>

        <%= f.label :Страна %>
        <%= f.text_field :country, class: 'form-control' %>

        <%= f.label :Область %>
        <%= f.text_field :region, class: 'form-control' %>

        <%= f.label :Хотели_ли_бы_Вы_получать_дополнительную_информацию %>
        <%= f.text_field :info, class: 'form-control' %>


    <% end %>

  </div>

</div>
